%div.diet_foods
  - @patient.diets.each do |diet|      
    = link_to admin_room_patient_diet_path(room_id: @room.id, patient_id: @patient.id, id: diet.id), method: :delete, class: "tile icon bg-color-green" do
      .tile-content
        .just_letters
          = diet.name


%div.foods_to_select
  - @diets.each do |diet|      
    =link_to admin_room_patient_diets_path(room_id: @room.id, patient_id: @patient.id, id: diet.id), method: :post, class: "tile icon bg-color-green" do
      .tile-content
        %h1.icon-large.icon-clipboard
      .brand
        .name
          = diet.name
