= form_for  [:admin, @food] do |food_form|
  %fieldset
    %legend Food Details
    .control-group
      = food_form.label :name, 'Food Name'
      .controls
        = food_form.text_field :name
    .control-group
      = food_form.label :kind, 'Type'
      .controls
        = food_form.select :kind, [['Breakfast', 'Breakfast'], ['Lunch', 'Lunch'], ['Supper', 'Supper']]

    .form-actions
      = food_form.submit 'Save'

- unless @food.new_record?
  = link_to [:admin, @food], method: :delete, class: 'tile icon bg-color-redDark' do
    .tile-content
      %h1.icon-large.icon-cancel-2
    .brand
      .name
        Delete Food
