.tiles
  %a{:class => "tile icon bg-color-green", href: new_room_patient_meal_order_path(room_id: @room, patient_id: @patient, meal_id: @meal, family_member: true)}
    .tile-content
      %h1.icon-large.icon-plus-2
    .brand
      .name
        Add Family Meal

- @orders.each do |order|      
  .tiles
    %a{:class => "tile icon bg-color-green", href: edit_room_patient_meal_order_path(@room, @patient, @meal, order)}
      .tile-content
        %h1.icon-large.icon-home
      .brand
        .name
          Order
