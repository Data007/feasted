.tiles
  - @foods.each do |food|      
    = link_to edit_order_wing_room_patient_meal_order_path(wing_id: @wing.id, room_id: @room.id, patient_id: @patient.id, meal_id: @meal.id, order_id:@order.id, food_id: food.id), method: :post, class: "tile icon bg-color-green" do
      .tile-content
        %h1.icon-large.icon-box 
      .brand
        .name
        = food.name

  %a{:class => "tile icon bg-color-green", href: place_order_wing_room_patient_meal_order_path(@wing, @room, @patient, @meal, @order)}
    .tile-content
      %h1.icon-large.icon-home
    .brand
      .name
        Place Order

  %div.diet_foods
    - @destroy_foods.each do |food|
      = link_to wing_room_patient_meal_orders_path(wing_id: @wing.id, room_id: @room.id, patient_id: @patient.id, meal_id: @meal.id, id: @order.id, food_id: food.id), method: :post, class: "tile icon bg-color-green" do
        .tile-content
          %h1.icon-large.icon-box
        .brand
          .name
            = food.name

